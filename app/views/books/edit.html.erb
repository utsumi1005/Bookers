<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div>
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <h5>Body</h5>
    <%= f.text_area :body %>
  </div>
  
  <div><%= f.submit 'Update Book' %></div>
  
  <div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", '/books' %>
  </div>
  
<% end %>